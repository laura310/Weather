<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayoutCityInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutTodayForecast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:gravity="center_horizontal">

            <TextView
            android:layout_weight="1"
            android:id="@+id/txtViewCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

            <TextView
            android:layout_weight="1"
            android:id="@+id/txtViewWeatherStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

            <TextView
            android:layout_weight="1"
            android:id="@+id/txtViewCurTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewCurDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCityInfo"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.0">

    </TextView>

    <TextView  android:id="@+id/txtViewCurHighLow"
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:layout_toRightOf="@id/txtViewCurDate"
        android:layout_alignParentRight="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCityInfo"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/txtViewCurDate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.95" />

    <LinearLayout
        android:id="@+id/linearLayoutTodayForecast"
        android:layout_width="0dp"
        android:layout_height="159dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewCurDate"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listView5dayForecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTodayForecast"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtView1stDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/txtView1stStatus"
                    android:layout_weight="1"
                    android:text="1st"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/txtView1stStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/txtView1stDay"
                    android:layout_weight="1"
                    android:text="1stStatus"
                    android:textAlignment="center"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/txtView1stNoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/txtView1stDay"
                    android:layout_weight="1"
                    android:text="1stNoon"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView2ndDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="2nd"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtView2ndStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtView1stDay"
                android:layout_weight="1"
                android:text="2ndStatus"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtView2ndNoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtView1stDay"
                android:layout_weight="1"
                android:text="2ndNoon"
                android:textAlignment="textEnd"
                android:textSize="20dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView3rdDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="3rd"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtView3rdStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtView1stDay"
                android:layout_weight="1"
                android:text="3rdStatus"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtView3rdNoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtView1stDay"
                android:layout_weight="1"
                android:text="3rdNoon"
                android:textAlignment="textEnd"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView4thDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="4th"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtView4thStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtView1stDay"
                android:layout_weight="1"
                android:text="4thStatus"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtView4thNoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtView1stDay"
                android:layout_weight="1"
                android:text="4thNoon"
                android:textAlignment="textEnd"
                android:textSize="20dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView5thDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="5th"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtView5thStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtView1stDay"
                android:layout_weight="1"
                android:text="4thStatus"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtView5thNoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/txtView1stDay"
                android:layout_weight="1"
                android:text="4thNoon"
                android:textAlignment="textEnd"
                android:textSize="20dp"/>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>